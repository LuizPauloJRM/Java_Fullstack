<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="minierp">
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/cursojsfprimefaces" />
			<property name="javax.persistence.jdbc.user" value="minierp_user" />
			<property name="javax.persistence.jdbc.password" value="minierp_password" />
			
			<!-- Dialeto do MySQL -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect" />

			<!-- Criação automática do schema -->
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
			<property name="javax.persistence.schema-generation.create-source" value="metadata" />
			<property name="javax.persistence.sql-load-script-source" value="META-INF/sql/dados-iniciais.sql" />

			<!-- Mostrar SQL -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
