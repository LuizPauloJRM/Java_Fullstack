<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">

  <display-name>primeiroprojetojsf</display-name>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.xhtml</welcome-file> <!-- Adicionado para JSF -->
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.xhtml</welcome-file> <!-- Adicionado para JSF -->
  </welcome-file-list>

  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <!-- Use a classe Jakarta Faces -->
    <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.jsf</url-pattern>
    <url-pattern>*.xhtml</url-pattern> <!-- Mapear também para .xhtml diretamente -->
  </servlet-mapping>

  <!-- Opcional: Listener do CDI (Weld) se necessário no seu ambiente Tomcat com Weld -->
  <!-- Geralmente não é estritamente necessário se o CDI for ativado via SCI (ServletContainerInitializer),
       mas pode ajudar na inicialização em alguns cenários.
  <listener>
      <listener-class>org.jboss.weld.environment.servlet.EnhancedListener</listener-class>
  </listener>
  -->

  <!-- Opcional: Parâmetro para o Client Window se você ainda tiver problemas com ele -->
  <!-- <context-param>
      <param-name>jakarta.faces.CLIENT_WINDOW_MODE</param-name>
      <param-value>url</param-value>
  </context-param> -->

</web-app>
